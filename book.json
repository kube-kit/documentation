{
  "title": "Kubekit Documentation",
  "description": "Complete documentation for kubekit",
  "author": "kubekit",
  "language": "en",
  "root": ".",
  
  "plugins": [
    "-lunr",
    "-search",
    "search-plus",
    "splitter",
    "expandable-chapters-small",
    "back-to-top-button",
    "tbfed-pagefooter",
    "code",
    "prism",
    "-highlight",
    "copy-code-button",
    "chapter-fold",
    "github",
    "emphasize",
    "theme-default",
    "favicon"
  ],
  
  "pluginsConfig": {
    "theme-default": {
      "showLevel": false,
      "styles": {
        "website": "styles/website.css"
      }
    },
    "search-plus": {
      "depth": 3
    },
    "tbfed-pagefooter": {
      "copyright": "Copyright &copy; KubeKit"
    },
    "github": {
      "url": "https://github.com/kube-kit/kube-kit"
    },
    "prism": {
      "css": [
        "prismjs/themes/prism-tomorrow.css"
      ]
    },
    "favicon": {
      "shortcut": "./docs/images/final/icon.ico",
      "bookmark": "./docs/images/final/icon.ico"
    }
  },
  "styles": {
    "website": "styles/website.css",
    "ebook": "styles/ebook.css",
    "pdf": "styles/pdf.css",
    "mobi": "styles/mobi.css",
    "epub": "styles/epub.css"
  },
  
  "structure": {
    "readme": "README.md"
  }
}